{
  "name": "@peartube/platform",
  "version": "0.1.0",
  "description": "Platform abstraction layer for PearTube",
  "private": true,
  "type": "module",
  "main": "./src/index.js",
  "types": "./src/index.d.ts",
  "exports": {
    ".": "./src/index.js",
    "./types": "./src/types.js",
    "./detection": "./src/detection.js",
    "./storage": "./src/storage.js",
    "./rpc": {
      "react-native": "./src/rpc.native.ts",
      "default": "./src/rpc.web.ts"
    },
    "./rpc.native": "./src/rpc.native.ts",
    "./rpc.web": "./src/rpc.web.ts"
  },
  "scripts": {
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@peartube/spec": "file:../spec"
  },
  "peerDependencies": {
    "react-native-bare-kit": "*",
    "expo-file-system": "*"
  },
  "peerDependenciesMeta": {
    "react-native-bare-kit": {
      "optional": true
    },
    "expo-file-system": {
      "optional": true
    }
  },
  "devDependencies": {
    "typescript": "^5.9.0"
  }
}

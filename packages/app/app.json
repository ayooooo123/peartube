{
  "expo": {
    "name": "PearTube",
    "slug": "peartube",
    "version": "1.0.0",
    "newArchEnabled": true,
    "orientation": "default",
    "scheme": "peartube",
    "icon": "./assets/images/icon.png",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0e0e10"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.peartube.app",
      "infoPlist": {
        "UIFileSharingEnabled": true,
        "LSSupportsOpeningDocumentsInPlace": true
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#0e0e10"
      },
      "package": "com.peartube.app"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      ["expo-router"],
      [
        "expo-build-properties",
        {
          "android": {
            "minSdkVersion": 29
          }
        }
      ],
      [
        "expo-media-library",
        {
          "photosPermission": "Allow PearTube to save videos to your device.",
          "savePhotosPermission": "Allow PearTube to save videos to your device.",
          "isAccessMediaLocationEnabled": true
        }
      ]
    ]
  }
}

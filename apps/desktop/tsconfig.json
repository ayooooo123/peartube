{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ES2022",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "noEmit": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@peartube/core": ["../../packages/core/src/index.ts"],
      "@peartube/platform": ["../../packages/platform/src/index.js"],
      "@peartube/spec": ["../../packages/spec/spec/hrpc/index.js"],
      "@peartube/backend": ["../../packages/backend/src/index.js"]
    }
  },
  "include": ["src/**/*", "workers/**/*"],
  "exclude": ["node_modules", "build"]
}

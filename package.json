{
  "name": "peartube-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "PearTube monorepo - P2P video streaming for desktop and mobile",
  "scripts": {
    "start": "npm start --prefix packages/app",
    "ios": "npm run ios --prefix packages/app",
    "android": "npm run android --prefix packages/app",
    "pear": "npm run pear:dev --prefix packages/app",
    "pear:build": "npm run pear:build --prefix packages/app",
    "bundle:backend": "npm run bundle:backend --prefix packages/app",
    "typecheck": "npm run typecheck --prefix packages/platform",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx --quiet",
    "lint:fix": "npm run lint -- --fix",
    "install:all": "npm install && npm install --prefix packages/app --legacy-peer-deps"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "eslint": "^8.57.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.0",
    "eslint-plugin-react": "^7.37.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "hypercore-blob-server": "^1.12.0",
    "typescript": "^5.9.0"
  },
  "overrides": {
    "eslint-plugin-react-hooks": "^4.6.2",
    "@peartube/spec": "file:packages/spec"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "expo-media-library": "^18.2.1"
  }
}

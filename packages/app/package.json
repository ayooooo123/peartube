{
  "private": true,
  "name": "@peartube/app",
  "description": "PearTube - P2P video streaming app (mobile + desktop)",
  "main": "expo-router/entry",
  "scripts": {
    "start": "expo start",
    "android": "npm run bundle:backend && expo run:android",
    "ios": "pkill -f metro || true; rm -rf /tmp/metro-* || true; npm run bundle:backend && expo run:ios",
    "web": "expo start --web",
    "web:export": "EXPO_NO_METRO_WORKSPACE_ROOT=1 expo export --platform web",
    "bundle:backend": "bare-pack --target ios --target android --linked --out backend.bundle.js backend/index.mjs",
    "bundle:test": "bare-pack --target ios --target android --linked --out test.bundle.js backend/test-minimal.mjs",
    "pear:export": "EXPO_NO_METRO_WORKSPACE_ROOT=1 expo export --platform web --output-dir .pear-build",
    "pear:merge": "mkdir -p pear && rsync -av --exclude='package.json' .pear-build/ pear/ && rm -rf .pear-build",
    "pear:copy": "cp pear-src/package.json pear-src/worker-client.js pear-src/index.js pear/ && mkdir -p pear/scripts && cp pear-src/scripts/build-release.js pear/scripts/",
    "pear:install": "cd pear && npm install",
    "pear:worker": "mkdir -p pear/build/workers/core && npx swc pear-src/workers/core/index.ts -o pear/build/workers/core/index.js",
    "pear:inject": "node pear-src/scripts/inject-pear-bar.js pear",
    "pear:build": "npm run pear:export && npm run pear:merge && npm run pear:copy && npm run pear:install && npm run pear:worker && npm run pear:inject",
    "pear:dev": "npm run pear:build && cd pear && pear run --store=$HOME/.peartube --dev .",
    "pear:stage": "npm run pear:build && cd pear && pear stage .",
    "pear:release": "npm run pear:build && cd pear && pear release",
    "build:ios": "npm run bundle:backend && expo run:ios",
    "build:ios:device": "npm run bundle:backend && expo run:ios --device",
    "build:android": "npm run bundle:backend && expo run:android",
    "build:android:apk": "npm run bundle:backend && cd android && ./gradlew assembleRelease",
    "build:android:aab": "npm run bundle:backend && cd android && ./gradlew bundleRelease",
    "build:eas:ios": "eas build --platform ios --profile preview",
    "build:eas:android": "eas build --platform android --profile preview",
    "build:eas:all": "eas build --platform all --profile preview"
  },
  "author": "PearTube",
  "license": "Apache-2.0",
  "dependencies": {
    "@expo/vector-icons": "^15.0.3",
    "@ffmpeg/ffmpeg": "^0.12.15",
    "@ffmpeg/util": "^0.12.2",
    "@gluestack-ui/button": "^1.0.14",
    "@gluestack-ui/icon": "^0.1.27",
    "@gluestack-ui/input": "^0.1.38",
    "@gluestack-ui/nativewind-utils": "^1.0.28",
    "@gluestack-ui/overlay": "^0.1.22",
    "@gluestack-ui/pressable": "^0.1.23",
    "@gluestack-ui/spinner": "^0.1.15",
    "@gluestack-ui/toast": "^1.0.9",
    "@legendapp/motion": "^2.5.3",
    "@peartube/backend": "file:../backend",
    "@peartube/core": "file:../core",
    "@peartube/platform": "file:../platform",
    "@peartube/spec": "file:../spec",
    "@react-navigation/bottom-tabs": "^7.8.7",
    "@react-navigation/core": "^7.13.6",
    "@react-navigation/native": "^7.1.22",
    "autobase": "^7.24.0",
    "blind-peer": "^3.0.1",
    "blind-peering": "^1.15.0",
    "expo": "^54.0.10",
    "expo-build-properties": "^1.0.9",
    "expo-constants": "^18.0.9",
    "expo-document-picker": "^13.0.0",
    "expo-downloads-save": "file:./modules/expo-downloads-save",
    "expo-file-system": "^18.0.0",
    "expo-image-picker": "^17.0.8",
    "expo-linking": "^8.0.8",
    "expo-media-library": "^18.0.0",
    "expo-router": "^6.0.8",
    "expo-screen-orientation": "^9.0.8",
    "expo-sharing": "~14.0.8",
    "expo-status-bar": "^3.0.9",
    "expo-system-ui": "^6.0.7",
    "expo-video": "^3.0.14",
    "expo-video-thumbnails": "^8.0.0",
    "hrpc": "^4.2.0",
    "hyperbee-diff-stream": "^2.0.1",
    "nativewind": "^4.2.1",
    "protomux-wakeup": "^2.9.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "^0.81.4",
    "react-native-b4a": "^0.0.4",
    "react-native-bare-kit": "^0.11.5",

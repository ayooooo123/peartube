{
  "name": "@peartube/desktop",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "PearTube desktop app for Pear Runtime",
  "scripts": {
    "build:mobile": "cd ../mobile && npm run web:export",
    "build:worker": "rm -rf build/workers/core && mkdir -p build/workers/core && cd workers/core && npx swc *.ts -d ../../build/workers/core",
    "build:worker-client": "node scripts/build-worker-client.js",
    "copy:web": "rm -rf _expo assets '(tabs)' '+not-found.html' '_sitemap.html' index.html settings.html studio.html subscriptions.html 2>/dev/null; cp -r ../mobile/dist/* . && node scripts/inject-pear-bar.js .",
    "build": "npm run build:worker && npm run build:worker-client && npm run build:mobile && npm run copy:web",
    "dev": "npm run build && pear run --dev .",
    "preview": "pear run --dev .",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@peartube/backend-core": "file:../../packages/backend-core",
    "@peartube/rpc": "file:../../packages/rpc",
    "@peartube/shared": "file:../../packages/shared",
    "@peartube/ui": "file:../../packages/ui",
    "@reduxjs/toolkit": "^2.8.0",
    "autobase": "^7.22.0",
    "b4a": "^1.6.0",
    "bare-buffer": "^3.4.1",
    "bare-crypto": "^1.12.0",
    "bare-env": "^3.0.0",
    "bare-events": "^2.8.1",
    "bare-fs": "^4.5.0",
    "bare-path": "^3.0.0",
    "bare-process": "^4.2.2",
    "bare-rpc": "^1.0.0",
    "bare-stream": "^2.7.0",
    "buffer": "^6.0.3",
    "compact-encoding": "^2.18.0",
    "corestore": "^6.18.0",
    "esbuild-plugin-polyfill-node": "^0.3.0",
    "events": "^3.3.0",
    "framed-stream": "^1.0.1",
    "hrpc": "^4.2.0",
    "hyperbee": "^2.26.0",
    "hypercore": "^10.37.0",
    "hypercore-blob-server": "^1.12.0",
    "hypercore-crypto": "^3.6.0",
    "hyperdrive": "^13.0.0",
    "hyperswarm": "^4.15.0",
    "localdrive": "^2.2.0",
    "pear-bridge": "^1.2.0",
    "pear-electron": "^1.7.0",
    "pear-hotmods": "^1.0.3",
    "pear-ipc-client": "^1.0.0",
    "pear-message": "^1.0.0",
    "pear-messages": "^1.0.5",
    "pear-pipe": "^1.0.6",
    "pear-run": "^1.0.8",
    "process": "^0.11.10",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-native-web": "^0.19.13",
    "react-redux": "^9.2.0",
    "readable-stream": "^4.7.0",
    "tiny-buffer-rpc": "^2.3.1",
    "unix-path-resolve": "^1.0.2"
  },
  "devDependencies": {
    "@swc/cli": "^0.5.0",
    "@swc/core": "^1.13.0",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.0",
    "@vitejs/plugin-react": "^4.3.4",
    "esbuild": "^0.24.2",
    "pear-interface": "^1.1.0",
    "typescript": "^5.9.0",
    "vite": "^6.0.0"
  },
  "pear": {
    "name": "peartube",
    "type": "desktop",
    "pre": "pear-electron/pre",
    "unrouted": [],
    "links": {
      "localhost": "http://127.0.0.1",
      "https": "https://*"
    },
    "gui": {
      "main": "index.html",
      "width": 1280,
      "height": 800,
      "minWidth": 960,
      "minHeight": 600,
      "backgroundColor": "#000000",
      "hideable": true
    },
    "stage": {
      "ignore": [
        ".cursor",
        ".git",
        ".github",
        ".gitignore",
        "*.tgz",
        ".swcrc",
        "node_modules/.package-lock.json",
        "node_modules/*/*.md",
        "node_modules/*/*/*.md",
        "node_modules/*/LICENSE",
        "node_modules/*/*/LICENSE",
        "build/src",
        "scripts",
        "src",
        "workers"
      ]
    }
  }
}

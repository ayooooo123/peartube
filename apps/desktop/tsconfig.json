{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ES2022",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "noEmit": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@peartube/shared": ["../../packages/shared/src/index.ts"],
      "@peartube/ui": ["../../packages/ui/src/index.ts"]
    }
  },
  "include": ["src/**/*", "workers/**/*"],
  "exclude": ["node_modules", "build"]
}
